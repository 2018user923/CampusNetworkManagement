<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <select id="getUserById" resultType="User">
        select *
        from user_table
        where Id = #{id}
    </select>

    <select id="getUserByUserName" resultType="User">
        select *
        from user_table
        where user_Name = #{userName}
    </select>

    <update id="updateUserById">
        update user_table
        <trim prefix="set" suffixOverrides=",">
            <if test="userName != null">user_name = #{userName},</if>
            <if test="passWord != null">pass_Word = #{passWord},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="idCard != null">id_card = #{idCard},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="balance != null">balance = #{balance},</if>
            <if test="type != null">type = #{type},</if>
        </trim>
        where Id = #{id}
    </update>

    <update id="updateUserByUserName">
        update user_table
        <trim prefix="set" suffixOverrides=",">
            <if test="passWord != null">pass_Word = #{passWord},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="idCard != null">id_card = #{idCard},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="balance != null">balance = #{balance},</if>
            <if test="type != null">type = #{type},</if>
        </trim>
        where user_name = #{userName}
    </update>

    <delete id="deleteUserById">
        delete
        from user_table
        where Id = #{id}
    </delete>

    <delete id="deleteUserByUserName">
        delete
        from user_table
        where user_name = #{userName}
    </delete>

    <!--
     useGeneratedKeys="true" ：设置是否使用baiJDBC的getGenereatedKeys方法获取主键并赋值到keyProperty设置的领域模型属性中。
    （适用于mysql、sqlserver数据库，oracle不能使用，使用selectkey子节点做）

    keyProperty：赋值的对象的属性名称。
    -->
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        insert into user_table(user_name, pass_word, phone, email, id_card, avatar, balance, type)
        values (#{userName}, #{passWord}, #{phone}, #{email}, #{idCard}, #{avatar}, #{balance}, #{type});
    </insert>
</mapper>